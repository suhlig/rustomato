#!/bin/bash

set -euo pipefail
IFS=$'\n\t'

CONCOURSE_TARGET=uh
PIPELINE_NAME=rustomato
SCRIPT_PATH=$(dirname "$(realpath -s "$0")")

fly \
    --target "$CONCOURSE_TARGET" \
  set-pipeline \
    --pipeline="$PIPELINE_NAME" \
    --config "$SCRIPT_PATH"/pipelines/release.yml \
    --load-vars-from="${SCRIPT_PATH}/private-config.yml"
